<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:weightSum="1">

    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/userInput"
        android:layout_toStartOf="@+id/userInput" />
    <EditText
        android:id="@+id/userInput"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/back"
        android:layout_centerHorizontal="true" />
    <FrameLayout
        android:id="@+id/auto_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userInput"
        android:layout_alignLeft="@+id/Listtitle"
        android:layout_alignRight="@+id/Listtitle"
        >

    </FrameLayout>

    <Button

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:id="@+id/done"
        android:layout_alignBottom="@+id/back"
        android:layout_toRightOf="@+id/userInput"
        android:layout_toEndOf="@+id/userInput" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Input History"
        android:id="@+id/Listtitle"
        android:layout_below="@+id/userInput"
        android:layout_alignLeft="@+id/back"
        android:layout_alignStart="@+id/back"
        android:layout_alignRight="@+id/done"
        android:layout_alignEnd="@+id/done"
        android:gravity="center_horizontal"
        android:background="#FFFF99"
        android:textSize="25sp"
        android:textColor="#0099FF"/>
    <FrameLayout
        android:id="@+id/user_history_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Listtitle"
        android:layout_alignLeft="@+id/Listtitle"
        android:layout_alignRight="@+id/Listtitle">

    </FrameLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x"
        android:id="@+id/clear"
        android:layout_alignBottom="@+id/user_history_container"
        android:layout_toRightOf="@+id/auto_hint"
        android:layout_toEndOf="@+id/auto_hint" />
</RelativeLayout>
